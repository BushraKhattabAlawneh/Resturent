@model IEnumerable<Resturent.Models.JoinTable>
@{
    Layout = "_DashboardLayout";
}
<div class="col-md-12">
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title ">Order table</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class=" text-primary">
                        <tr>
                            <th>
                                Product name
                            </th>
                            <th>
                                Customer name
                            </th>
                            <th>
                                Category name
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Quantity
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                        <tr>
                            <td>
                                @item.product.Namee
                            </td>
                            <td>
                                @item.customer.Fname @item.customer.Lname
                            </td>
                            <td>
                                @item.category.CategoryName
                            </td>
                            <td>
                                @item.product.Price
                            </td>
                            <td class="text-primary">
                                @item.productCustomer.Quantity
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>