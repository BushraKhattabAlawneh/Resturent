@model IEnumerable<Resturent.Models.ProductCustomer>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-6">
        <form action="Search" method="post">
            <input type="date" class="form-control" name="startDate" placeholder="Start Date">
            <input type="date" class="form-control" name="endDate" placeholder="End Date">

            <button type="submit" class="btn btn-dark">Search</button>

        </form>
    </div>
</div>



<h1>Search</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFrom)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFrom)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Namee)
            </td>
          
        </tr>
}
    </tbody>
</table>
